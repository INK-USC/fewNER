#!/bin/bash
SCRIPTPATH="$( cd -- "$(dirname "$0")" >/dev/null 2>&1 ; pwd -P )"
ROOTPATH="${SCRIPTPATH}/../"

while true; do
    read -p "Do you wish to delete existing models and results? (y/n)" yn
    case $yn in
        [Yy]* ) rm -rf "${ROOTPATH}results"; rm -rf "${ROOTPATH}results_metrics"; rm -rf "${ROOTPATH}model_files"; rm -rf "${ROOTPATH}logs";echo "All results deleted"; exit;;
        [Nn]* ) echo "Bye"; exit;;
        * ) echo "Please answer yes or no.";;
    esac
done

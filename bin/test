NODENAME=$(hostname)
SCRIPTPATH="$( cd -- "$(dirname "$0")" >/dev/null 2>&1 ; pwd -P )"
ROOTPATH="${SCRIPTPATH}/../"
srun --gres=gpu:1080:1 --nodelist "${NODENAME}" \
python3 "${ROOTPATH}transformers_trainer.py" \
--dataset conll \
--data_dir "${ROOTPATH}dataset/conll" \
--model_folder "${ROOTPATH}models/conll/train_all" \
--device cuda:0 \
--percent_filename_suffix all
